<script type="text/javascript">
	var default_tab01,default_tab02,default_tab03,default_tab04,default_tab05,default_tab06,default_tab07;
	$(document).ready(function(){
		default_tab01 = $("#tab01").clone();
		default_tab02 = $("#tab02").clone();
    	default_tab03 = $("#tab03").clone();
    	default_tab04 = $("#tab04").clone();
    	default_tab05 = $("#tab05").clone();
    	default_tab06 = $("#tab06").clone();
    	default_tab07 = $("#tab07").clone();

		//둘러보기
		$('.rescue_list').slick({
			autoplay:false,
			accessibility:false,
			autoplaySeep:4000,
			slidesToShow:1,
			slidesToscroll:1,
			swipe: true,
      		swipeToSlide: true,
			dots: false
		});
	});

	var slideCount = null;

	var $rescue = $('.rescue_list');
	$rescue.each(function(){
		var target = $(this).parent().find(".slide_count");
		$(this).on('init', function(event, slick){
		  slideCount = slick.slideCount;
		  setSlideCount(slideCount,target);
		  setCurrentSlideNumber(slick.currentSlide,target);
		});
		$(this).on('beforeChange', function(event, slick, currentSlide, nextSlide){
		  setCurrentSlideNumber(nextSlide,target);
		});
	})

	function setSlideCount(slideCount,target) {
	  var $el = $(target).find('.total');
	  $el.text(slideCount);
	}

	function setCurrentSlideNumber(currentSlide,target) {
	  var $el = $(target).find('.current');
	  $el.text(currentSlide + 1);
	}
	
	
	$(".tab_content .rescue_list div img").click(function() {
		var rescueImg = $(this);
		$(".rescue_Imgpopup .popup_wrap .popupImg").attr("src", rescueImg.attr("src"));
		$('.rescue_Imgpopup').fadeIn(); 
	});
	$('.rescue_Imgpopup .close').click(function(){
		$('.rescue_Imgpopup').fadeOut(); 
	});	


	$(document).on('ready', function() {

		$(".tab_content").hide();
		$("ul.tabs li:last").addClass("on").show();
		$(".tab_content:first").show();
		//On Click Event
		$("ul.tabs li").click(function() {
			$("ul.tabs li").removeClass("on");
			$(this).addClass("on");
			$(".rescue_list").slick('unslick');
			$(".tab_content").hide();
			var activeTab = $(this).find("a").attr("href");
			var buff = eval("default_"+activeTab.replace("#",""));
			$(activeTab).html($(buff).html());
			$(activeTab).fadeIn();

			var $rescue = $('.rescue_list');
			$rescue.each(function(){
				var target = $(this).parent().find(".slide_count");
				$(this).on('init', function(event, slick){
				  slideCount = slick.slideCount;
				  setSlideCount(slideCount,target);
				  setCurrentSlideNumber(slick.currentSlide,target);
				});
				$(this).on('beforeChange', function(event, slick, currentSlide, nextSlide){
				  setCurrentSlideNumber(nextSlide,target);
				});
			});
			
			$(".tab_content .rescue_list div img").click(function() {
				var rescueImg = $(this);
				$(".rescue_Imgpopup .popup_wrap .popupImg").attr("src", rescueImg.attr("src"));
				$('.rescue_Imgpopup').fadeIn(); 
			});
			$('.rescue_Imgpopup .close').click(function(){
				$('.rescue_Imgpopup').fadeOut(); 
			});	

			$(".rescue_list").slick({
				autoplay:false,
				accessibility:false,
				autoplaySeep:4000,
				slidesToShow:1,
				slidesToscroll:1,
				dots: false
			});
			
			return false;
		});
	});
